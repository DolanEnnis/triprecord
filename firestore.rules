rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }

    // Look up the REQUESTER'S document to check if they are an admin.
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    // --- Users Collection ---
    
    match /users/{docId} {
      // Allow Reading:
      // 1. Admins can read everything (for the Admin Table).
      // 2. Users can read their own profile.
      // 3. We allow listing for login (AuthService.findUserDocByEmail) 
      allow list: if isSignedIn(); 
      allow get: if isSignedIn() && (request.auth.uid == docId || isAdmin());

      // Allow Writing:
      // 1. Admins can update any user (Update Roles).
      // 2. Users can write to their own document (request.auth.uid == docId).
      allow write: if (isSignedIn() && request.auth.uid == docId) || isAdmin();
    }

    // --- Visits & Trips (Protecting the core data) ---
    
    match /visits/{visitId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Consider restricting delete to admins
    }
    
    match /visits_new/{visitId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /trips/{tripId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }

    match /ships/{shipId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn();
    }
    
    match /charges/{chargeId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Ideally only allow creates, disable updates/deletes for audit
    }

    // --- Distance Feature ---
    match /distance/{document=**} {
      allow read, write: if isSignedIn();
    }

    // --- System Settings (Shannon Monitoring) ---
    match /system_settings/{document} {
      // Everyone can read system settings
      allow read: if isSignedIn();
      // Only Cloud Functions can write (no user can write)
      allow write: if false;
    }
  }
}